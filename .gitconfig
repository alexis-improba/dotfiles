; vim: ft=gitconfig syn=gitconfig

[user]
	name = alexis-unifox
	email = a.moins@unifox.ai

[init]
    defaultBranch = main

[core]
    editor = nvim

[color]
    ui = true

[color "branch"]
    remote = blue
    local = normal
    worktree = cyan
    current = green

[diff]
    colorMoved = default

[difftool]
    prompt = false

[merge]
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = false

[rerere]
    enabled = 1

[alias]
    ci = commit
    cim = commit -m

    st = status
    co = checkout
    br = branch

    dt = difftool
    mt = mergetool

    log = log --all
    bl = branch -va

    amend = commit --amend --no-edit
    ignore = !git rm -r --cached . && git add -A

    this = !git init && git add -A && git commit -m 'feat: ðŸŽ‰ initial commit'
    oops = !git stash && git co -b oops && git stash pop

[format]
    pretty = format:%C(auto)%h [%D] %C(brightblue)%an%C(reset) %s (%C(cyan)%cr%C(reset))

[push]
	autoSetupRemote = true

[remote "origin"]
	prune = true
