[user]
    name = alexis-moins
    email = sinus.nacre0v@icloud.com

[init]
    defaultBranch = main

[core]
    editor = nvim

[diff]
    colorMoved = default
	mnemonicPrefix = true

[color "diff"]
    meta = bold black

[difftool]
    prompt = true

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = false

[rerere]
    enabled = 1

[alias]
    ci = commit
    force = !git amend && git push -f

    co = checkout
    br = branch --format '%(color:red)%(HEAD)%(color:white) %(align:30)%(refname:short)%(end) %(align:30)%(color:blue)%(upstream:short)%(color:white) %(color:magenta)%(upstream:track)%(color:white)%(end)'

    dt = difftool
    mt = mergetool

    log = log --all
    bl = branch -va

    di = diff --word-diff

    amend = commit --amend --no-edit
    ignore = !git rm -r --cached . && git add -A

    this = !git init && git add -A && git commit -m 'feat: initial commit'
    oops = !git stash && git co -b oops && git stash pop

[format]
    pretty = format:%C(auto)%h [%D] %C(brightblue)%an%C(reset) %s %C(bold black)%cr%C(reset)

[push]
    autoSetupRemote = true

[remote "origin"]
    prune = true
