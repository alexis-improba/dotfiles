#!/usr/bin/env bash

set -e

[[ ! -d "${HOME}/.config" ]] && mkdir -v "${HOME}/.config"
[[ ! -d "${HOME}/code" ]] && mkdir -v "${HOME}/code"

brew bundle install

fish utils/packer-install

stow --delete . && stow --stow --verbose .

cp -vf .hyper.js ~/.hyper.js

pipx install httpx
pipx install pre-commit
