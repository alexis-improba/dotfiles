#!/usr/bin/env bash
#
# Restore git files interactively
#
git_root="$(git rev-parse --show-toplevel)"

candidates="$(git diff --cached --name-only)"
[[ -z "${candidates}" ]] && echo 'No more staged changes to restore' && exit 0

echo "${candidates}" \
    | tr ' ' '\n' \
    | gum filter --no-limit --fuzzy --placeholder="Select files to restore" \
    | sed -e "s!^!${git_root}/!" \
    | xargs git restore --staged
